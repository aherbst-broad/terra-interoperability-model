{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/DataBiosphere/terra-interoperability-model/tree/master/src/terra-core/schema/json/file.schema.json",
    "title": "File",
    "description": "A file",
    "type": "object",
    "properties": {
        "id": {
            "description": "ID of the file",
            "type": "string"
        },
        "name": {
            "description": "Name of the file",
            "type": "string"
        },
        "data_modality": {
            "description": "Data modality of the file",
            "type": "string"
        },
        "file_format": {
            "description": "Format of the file",
            "type": "string"
        },
        "reference_assembly": {
            "description": "Reference genomic assembly",
            "type": "string"
        },
        "cross_references": {
            "description": "Cross references",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["id", "file_format", "reference_assembly"]
}
